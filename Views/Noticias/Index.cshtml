@model Noticias
@{
    ViewData["Title"] = "Noticias";
}

<form action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdNoticia" />
    
    <label>Titulo</label>
    <input type="text" name="Titulo"/>

    <label>Texto</label>
    <input type="text" name="Texto"/>

    <label>Imagem</label>
    <input type="file" name="Imagem" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Foto</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach(Noticias n in ViewBag.Noticias){
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Titulo</td>
                <td>@n.Texto</td>
                <td>
                    <img src="img/noticias/@n.Imagem" alt="imagem do time @n.Titulo">
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Noticias" asp-action="Excluir" asp-route-id = "@n.IdNoticia">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>