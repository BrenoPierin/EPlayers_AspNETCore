@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdEquipe" />
    
    <label>Nome</label>
    <input type="text" name="Nome"/>

    <label>Imagem</label>
    <input type="file" name="Imagem" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach(Equipe e in ViewBag.Equipes){
            <tr>
                <td>@e.IdEquipe</td>
                <td>@e.Nome</td>
                <td>
                    <img src="img/equipes/@e.Imagem" alt="imagem do time @e.Nome">
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id = "@e.IdEquipe">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>